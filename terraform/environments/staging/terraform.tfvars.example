# Staging Environment Configuration
# Book Review Platform - Staging Environment

# General Configuration
environment = "staging"
aws_region  = "us-east-1"

# Networking Configuration
vpc_cidr = "10.1.0.0/16"

# EC2 Configuration
instance_type = "t3.small"
key_pair_name = "" # Add your key pair name here

# Security Configuration
ssh_allowed_ips = ["0.0.0.0/0"] # Replace with your IP for security: ["YOUR_IP/32"]

# Load Balancer Configuration
enable_load_balancer = true
enable_elastic_ip    = true

# Monitoring Configuration
enable_cloudwatch_logs = true
log_retention_days     = 7
enable_monitoring      = true

# Backup Configuration
enable_ebs_backup     = true
backup_retention_days = 7

# Application Configuration
# Note: These should be set via environment variables or AWS Secrets Manager
# mongodb_uri    = "mongodb+srv://username:password@cluster.mongodb.net/bookreviews_staging"
# jwt_secret     = "your-staging-jwt-secret-key"
# openai_api_key = "your-openai-api-key"

# GitHub Configuration
# github_repo   = "your-username/be-review-platform"
# github_branch = "staging"

# Scaling Configuration
enable_auto_scaling = false
min_instances       = 1
max_instances       = 2
desired_instances   = 1

# Security Configuration
enable_waf = false
enable_ssl = false

# Node.js Configuration
node_version  = "18"
pm2_instances = 2

# DNS Configuration (optional)
# domain_name      = "staging.yourdomain.com"
# route53_zone_id  = "Z1234567890ABC"
